<h1>Add Customer</h1>
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: black;
        color:white;
    }
</style>
<form method="post" action="Add" class="mt-5">

    <div class="mb-3">
        <label for="" class="form-label">Id</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="CId">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Name</label>
        <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Name">

    </div>

    <div class="mb-3">
        <label for="" class="form-label">Email</label>
        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="Email">

    </div>
    <div class="mb-3">
        <label for="" class="form-label">Password</label>
        <input type="password" class="form-control" id="Password" aria-describedby="emailHelp" asp-for="Password">

    </div>



    <div class="mb-3">
        <label for="" class="form-label">Date of birth</label>
        <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" asp-for="DateOfBirth">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

